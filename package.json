{
  "name": "mywork",
  "productName": "myWork",
  "author": "ektx",
  "description": "工作记录",
  "version": "0.1.1",
  "main": "main.js",
  "scripts": {
    "start": "NODE_ENV=development ./node_modules/.bin/electron .",
    "build:mac": "electron-packager --platform=darwin --arch=x64 --electronVersion=1.6.4 --overwrite --ignore=dev-settings --prune . myWork --icon=app.icns --app-version=$npm_package_version",
    "build:win": "electron-packager --platform=win32 --arch=x64 --electronVersion=1.6.4 --overwrite --ignore=dev-settings --prune . myWork --icon=app.icns --app-version=$npm_package_version"
  },
  "devDependencies": {
    "electron": "^1.6.4",
    "electron-packager": "^8.5.2"
  },
  "dependencies": {
    "async": "^2.1.5"
  }
}
